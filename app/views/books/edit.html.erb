      <ul>
        <% @book.errors.full_messages.each do |messages| %>
          <li><%= messages %></li>
        <% end %>
      </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch  do |f| %>

  <label>Title</label>
  <%= f.text_field :title %>
  
  <label>Body</label>
  <%= f.text_area :body %>
  
  <div class="actions">
    <input type="submit" name="commit" value="Update Book" data-disable-with="Update Book">
  </div>
  
  
  <%= link_to "Show", book_path(@book.id) %>
  
  |
  
  <a class="back" href="/books">Back</a>
  
<% end %>
